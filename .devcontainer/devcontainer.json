{
  "name": "giggle-a-day-dev",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:1": {},
    "ghcr.io/devcontainers/features/firebase-cli:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "msjsdiag.vscode-react-native",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "firebase.firebase-tools",
        "eamodio.gitlens"
      ]
    }
  },
  "mounts": [
    "source=giggle-a-day-jokes,target=/workspace/jokes,type=volume"
  ],
  "forwardPorts": [19000, 19001, 19002],
  "postCreateCommand": "npm install && npx expo install",
  "remoteUser": "node"
}
